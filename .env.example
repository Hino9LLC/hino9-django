# Django Configuration
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# PostgreSQL Database Settings
# For local development - assumes PostgreSQL running on localhost
POSTGRES_DB=your-db-name
POSTGRES_USER=your-db-user
POSTGRES_PASSWORD=your-db-password
POSTGRES_SERVICE=localhost
POSTGRES_PORT=5432

# Redis Configuration
# For local development - assumes Redis running on localhost
REDIS_HOST=localhost
REDIS_PORT=6379

# AWS Configuration (for embedding service)
AWS_REGION=us-east-1
AWS_ACCESS_KEY=your-aws-access-key
AWS_SECRET_KEY=your-aws-secret-key
AWS_LAMBDA_ACCESS_KEY=your-lambda-access-key
AWS_LAMBDA_SECRET_KEY=your-lambda-secret-key
AWS_EMBED_URL=https://your-api-gateway-url.execute-api.us-east-1.amazonaws.com/prod/embed
AWS_APP_RUNNER_API_KEY=your-app-runner-api-key

# Application Settings
RATELIMIT_ENABLE=True
SEARCH_RATE_LIMIT=100/h

# Google Analytics (optional)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
